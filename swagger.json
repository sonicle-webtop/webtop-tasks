    }
  },
  "security" : [ {
    "Basic authentication" : [ ]
  } ],
  "paths" : {
    "/eas/folders" : {
      "get" : {
        "tags" : [ "eas-folders" ],
        "summary" : "List all folders",
        "operationId" : "getFolders",
        "produces" : [ "application/json" ],
        "parameters" : [ ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/SyncFolder"
              }
            }
          }
        }
      }
    },
    "/eas/folders/{folderId}/messages-stats" : {
      "get" : {
        "tags" : [ "eas-messages" ],
        "summary" : "List all messages for a specific folder",
        "operationId" : "getMessagesStats",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "folderId",
          "in" : "path",
          "description" : "Folder ID",
          "required" : true,
          "type" : "integer",
          "x-example" : 1234
        }, {
          "name" : "cutoffDate",
          "in" : "query",
          "description" : "Cut-off date (ISO date/time YYYYMMDD'T'HHMMSS'Z')",
          "required" : false,
          "type" : "string",
          "x-example" : "20150912T000000Z"
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/SyncTaskStat"
              }
            }
          },
          "400" : {
            "description" : "Invalid parameter"
          }
        }
      }
    },
    "/eas/folders/{folderId}/messages" : {
      "post" : {
        "tags" : [ "eas-messages" ],
        "summary" : "Adds a message",
        "operationId" : "addMessage",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "folderId",
          "in" : "path",
          "description" : "Folder ID",
          "required" : true,
          "type" : "integer",
          "x-example" : 1234
        }, {
          "in" : "body",
          "name" : "body",
          "required" : true,
          "schema" : {
            "$ref" : "#/definitions/SyncTaskUpdate"
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "Success",
            "schema" : {
              "$ref" : "#/definitions/SyncTaskStat"
            }
          }
        }
      }
    },
    "/eas/folders/{folderId}/messages/{id}" : {
      "get" : {
        "tags" : [ "eas-messages" ],
        "summary" : "Get a single message",
        "operationId" : "getMessage",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "folderId",
          "in" : "path",
          "description" : "Folder ID",
          "required" : true,
          "type" : "integer",
          "x-example" : 1234
        }, {
          "name" : "id",
          "in" : "path",
          "description" : "Message ID",
          "required" : true,
          "type" : "string",
          "x-example" : 1234
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "$ref" : "#/definitions/SyncTask"
            }
          },
          "400" : {
            "description" : "Invalid parameter"
          },
          "404" : {
            "description" : "Message not found"
          }
        }
      },
      "put" : {
        "tags" : [ "eas-messages" ],
        "summary" : "Updates a message",
        "operationId" : "updateMessage",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "folderId",
          "in" : "path",
          "description" : "Folder ID",
          "required" : true,
          "type" : "integer",
          "x-example" : 1234
        }, {
          "name" : "id",
          "in" : "path",
          "description" : "Message ID",
          "required" : true,
          "type" : "string",
          "x-example" : 1234
        }, {
          "in" : "body",
          "name" : "body",
          "required" : true,
          "schema" : {
            "$ref" : "#/definitions/SyncTaskUpdate"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "$ref" : "#/definitions/SyncTaskStat"
            }
          },
          "400" : {
            "description" : "Invalid parameter"
          },
          "404" : {
            "description" : "Message not found"
          }
        }
      },
      "delete" : {
        "tags" : [ "eas-messages" ],
        "summary" : "Deletes a message",
        "operationId" : "deleteMessage",
        "parameters" : [ {
          "name" : "folderId",
          "in" : "path",
          "description" : "Folder ID",
          "required" : true,
          "type" : "integer",
          "x-example" : 1234
        }, {
          "name" : "id",
          "in" : "path",
          "description" : "Message ID",
          "required" : true,
          "type" : "string",
          "x-example" : 1234
        } ],
        "responses" : {
          "204" : {
            "description" : "Success"
          },
          "400" : {
            "description" : "Invalid parameter"
          },
          "404" : {
            "description" : "Message not found"
          }
        }
      }
    },
    "/dav/folders" : {
      "get" : {
        "tags" : [ "dav" ],
        "summary" : "List task-folders",
        "description" : "Returns a list of available task categories.",
        "operationId" : "getDavFolders",
        "parameters" : [ ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/DavFolder"
              }
            }
          }
        }
      },
      "post" : {
        "tags" : [ "dav" ],
        "summary" : "Adds new task-folder",
        "description" : "Adds a new task category.",
        "operationId" : "addDavFolder",
        "parameters" : [ {
          "in" : "body",
          "name" : "body",
          "required" : false,
          "schema" : {
            "$ref" : "#/definitions/DavFolderNew"
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "Success",
            "schema" : {
              "$ref" : "#/definitions/DavFolder"
            }
          }
        }
      }
    },
    "/dav/folders/{folderUid}" : {
      "get" : {
        "tags" : [ "dav" ],
        "summary" : "Get task-folder",
        "description" : "Gets the specified task category.",
        "operationId" : "getDavFolder",
        "parameters" : [ {
          "name" : "folderUid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "$ref" : "#/definitions/DavFolder"
            }
          },
          "400" : {
            "description" : "Invalid parameter"
          },
          "404" : {
            "description" : "Folder not found"
          }
        }
      },
      "put" : {
        "tags" : [ "dav" ],
        "summary" : "Update task-folder",
        "description" : "Updates the specified task category.",
        "operationId" : "updateDavFolder",
        "parameters" : [ {
          "name" : "folderUid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        }, {
          "in" : "body",
          "name" : "body",
          "required" : false,
          "schema" : {
            "$ref" : "#/definitions/DavFolderUpdate"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Folder updated"
          },
          "400" : {
            "description" : "Invalid parameter"
          },
          "404" : {
            "description" : "Folder not Found"
          }
        }
      },
      "delete" : {
        "tags" : [ "dav" ],
        "summary" : "Delete task-folder",
        "description" : "Deletes the specified task category.",
        "operationId" : "deleteDavFolder",
        "parameters" : [ {
          "name" : "folderUid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "Folder deleted"
          },
          "400" : {
            "description" : "Invalid parameter"
          },
          "404" : {
            "description" : "Folder not Found"
          },
          "405" : {
            "description" : "Delete operation not allowed"
          }
        }
      }
    },
    "/dav/folders/{folderUid}/objects" : {
      "get" : {
        "tags" : [ "dav" ],
        "summary" : "List task objects",
        "description" : "Returns a list of task objects for the specified folder.",
        "operationId" : "getDavObjects",
        "parameters" : [ {
          "name" : "folderUid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "hrefs",
          "in" : "query",
          "description" : "A collection of hrefs to get",
          "required" : false,
          "type" : "array"
        }, {
          "name" : "format",
          "in" : "query",
          "description" : "Desired format of object data payload (defaults to icalendar)",
          "required" : false,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/DavObject"
              }
            }
          }
        }
      },
      "post" : {
        "tags" : [ "dav" ],
        "summary" : "Add new task object",
        "description" : "Adds new task object.",
        "operationId" : "addDavObject",
        "parameters" : [ {
          "name" : "folderUid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        }, {
          "in" : "body",
          "name" : "body",
          "required" : false,
          "schema" : {
            "$ref" : "#/definitions/DavObjectPayload"
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "Success"
          }
        }
      }
    },
    "/dav/folders/{folderUid}/objects/{href}" : {
      "get" : {
        "tags" : [ "dav" ],
        "summary" : "Get task object",
        "description" : "Gets the task object at the specified href.",
        "operationId" : "getDavObject",
        "parameters" : [ {
          "name" : "folderUid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "href",
          "in" : "path",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "format",
          "in" : "query",
          "description" : "Desired format of object data payload (defaults to icalendar)",
          "required" : false,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "$ref" : "#/definitions/DavObject"
            }
          },
          "400" : {
            "description" : "Invalid parameters"
          },
          "404" : {
            "description" : "Object not found"
          }
        }
      },
      "put" : {
        "tags" : [ "dav" ],
        "summary" : "Update task object",
        "description" : "Updates the task object at the specified href.",
        "operationId" : "updateDavObject",
        "parameters" : [ {
          "name" : "folderUid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "href",
          "in" : "path",
          "required" : true,
          "type" : "string"
        }, {
          "in" : "body",
          "name" : "body",
          "description" : "",
          "required" : false,
          "schema" : {
            "$ref" : "#/definitions/DavObjectPayload"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "OK"
          }
        }
      },
      "delete" : {
        "tags" : [ "dav" ],
        "summary" : "Deletes task object",
        "description" : "Deletes the task object at the specified href.",
        "operationId" : "deleteDavObject",
        "parameters" : [ {
          "name" : "folderUid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "href",
          "in" : "path",
          "required" : true,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "Success"
          },
          "400" : {
            "description" : "Invalid parameter"
          },
          "404" : {
            "description" : "Object not found"
          }
        }
      }
    },
    "/dav/folders/{folderUid}/objects/changes" : {
      "get" : {
        "tags" : [ "dav" ],
        "summary" : "Gets task object changes",
        "description" : "Returns changed task objects (added/modified/deleted) since the specified sync-token. If sync-token is not provided, the full set (initial) will be returned.",
        "operationId" : "getDavObjectsChanges",
        "parameters" : [ {
          "name" : "folderUid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "syncToken",
          "in" : "query",
          "description" : "Defines changes starting point",
          "required" : false,
          "type" : "string"
        }, {
          "name" : "limit",
          "in" : "query",
          "description" : "Limits the number of returned results",
          "required" : false,
          "type" : "integer"
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "$ref" : "#/definitions/DavObjectsChanges"
            }
          },
          "400" : {
            "description" : "Invalid parameter"
          }
        }
      }
    }
  },
  "securityDefinitions" : {
    "Basic authentication" : {
      "type" : "basic"
    }
  },
  "definitions" : {
    "ApiError" : {
      "type" : "object",
      "required" : [ "code" ],
      "properties" : {
        "code" : {
          "type" : "integer",
          "minimum" : 400,
          "maximum" : 599
        },
        "description" : {
          "type" : "string",
          "example" : "Bad query parameter [$size]: Invalid integer value [abc]"
        }
      },
      "description" : "This general detailed error structure is used throughout this API.",
      "example" : "{\n  \"code\": 400,\n  \"description\": \"Bad query parameter [$size]: Invalid integer value [abc]\"\n}"
    },
    "SyncFolder" : {
      "type" : "object",
      "required" : [ "deflt", "displayName", "elAcl", "etag", "foAcl", "id", "ownerId" ],
      "properties" : {
        "id" : {
          "type" : "integer",
          "description" : "Category ID (internal)"
        },
        "displayName" : {
          "type" : "string",
          "description" : "Display name"
        },
        "etag" : {
          "type" : "string",
          "description" : "Revision tag"
        },
        "deflt" : {
          "type" : "boolean",
          "description" : "Specifies if marked as predefined folder"
        },
        "foAcl" : {
          "type" : "string",
          "description" : "ACL info for folder itself"
        },
        "elAcl" : {
          "type" : "string",
          "description" : "ACL info for folder elements"
        },
        "ownerId" : {
          "type" : "string",
          "description" : "The owner profile ID"
        }
      },
      "description" : "Bean for carry category’s fields"
    },
    "SyncTaskStat" : {
      "type" : "object",
      "required" : [ "etag", "id" ],
      "properties" : {
        "id" : {
          "type" : "string",
          "description" : "Task ID (internal)"
        },
        "etag" : {
          "type" : "string",
          "description" : "Revision tag"
        }
      },
      "description" : "Bean for carry task's stat fields"
    },
    "SyncTask" : {
      "type" : "object",
      "required" : [ "etag", "id", "impo", "prvt", "status" ],
      "properties" : {
        "id" : {
          "type" : "string",
          "description" : "Task ID (internal)"
        },
        "etag" : {
          "type" : "string",
          "description" : "Revision tag"
        },
        "subject" : {
          "type" : "string",
          "description" : "Subject"
        },
        "start" : {
          "type" : "string",
          "description" : "Start date/time (ISO date/time YYYYMMDD’T’HHMMSS’Z’)"
        },
        "due" : {
          "type" : "string",
          "description" : "Due date/time (ISO date/time YYYYMMDD’T’HHMMSS’Z’)"
        },
        "status" : {
          "type" : "string",
          "description" : "Completion status"
        },
        "complOn" : {
          "type" : "string",
          "description" : "Completed date/time (ISO date/time YYYYMMDD’T’HHMMSS’Z’)"
        },
        "impo" : {
          "type" : "integer",
          "description" : "Priority flag (0=low, 1=normal, 2=high)"
        },
        "prvt" : {
          "type" : "boolean",
          "description" : "Private flag"
        },
        "notes" : {
          "type" : "string",
          "description" : "Description"
        }
      },
      "description" : "Bean for carry task's fields"
    },
    "SyncTaskUpdate" : {
      "type" : "object",
      "required" : [ "impo", "prvt" ],
      "properties" : {
        "subject" : {
          "type" : "string",
          "description" : "Subject"
        },
        "start" : {
          "type" : "string",
          "description" : "Start date/time (ISO date/time YYYYMMDD'T'HHMMSS'Z')"
        },
        "due" : {
          "type" : "string",
          "description" : "Due date/time (ISO date/time YYYYMMDD'T'HHMMSS'Z')"
        },
        "complOn" : {
          "type" : "string",
          "description" : "Completed date/time (ISO date/time YYYYMMDD'T'HHMMSS'Z')"
        },
        "impo" : {
          "type" : "integer",
          "description" : "Priority flag (0=low, 1=normal, 2=high)"
        },
        "prvt" : {
          "type" : "boolean",
          "description" : "Private flag"
        },
        "notes" : {
          "type" : "string",
          "description" : "Description"
        }
      },
      "description" : "Bean for carry task's updateable fields"
    },
    "DavFolder" : {
      "type" : "object",
      "required" : [ "aclEle", "aclFol", "displayName", "id", "name", "ownerUsername", "syncToken", "uid" ],
      "properties" : {
        "id" : {
          "type" : "integer",
          "description" : "Category ID (internal)"
        },
        "uid" : {
          "type" : "string",
          "description" : "Category UID (public)"
        },
        "name" : {
          "type" : "string",
          "description" : "Category's name"
        },
        "description" : {
          "type" : "string",
          "description" : "Category's description"
        },
        "color" : {
          "type" : "string",
          "description" : "Associated color in HEX format (like #FFFFFF)"
        },
        "syncToken" : {
          "type" : "string",
          "description" : "Current sync-token"
        },
        "aclFol" : {
          "type" : "string",
          "description" : "ACL info for folder itself"
        },
        "aclEle" : {
          "type" : "string",
          "description" : "ACL info for folder elements"
        },
        "ownerUsername" : {
          "type" : "string",
          "description" : "The owner profile's username"
        },
        "displayName" : {
          "type" : "string",
          "description" : "Suitable display name"
        }
      },
      "title" : "DavFolder"
    },
    "DavFolderNew" : {
      "type" : "object",
      "required" : [ "name" ],
      "properties" : {
        "name" : {
          "type" : "string",
          "description" : "Category's name"
        },
        "description" : {
          "type" : "string",
          "description" : "Category's description"
        },
        "color" : {
          "type" : "string",
          "description" : "Associated color in HEX format (like #FFFFFF)"
        }
      },
      "title" : "DavFolderNew"
    },
    "DavFolderUpdate" : {
      "type" : "object",
      "properties" : {
        "name" : {
          "type" : "string",
          "description" : "Category's name"
        },
        "description" : {
          "type" : "string",
          "description" : "Category's description"
        },
        "color" : {
          "type" : "string",
          "description" : "Associated color in HEX format (like #FFFFFF)"
        },
        "updatedFields" : {
          "type" : "array",
          "description" : "List of field names (above) updated by the operation",
          "items" : {
            "type" : "string"
          }
        }
      },
      "title" : "DavFolderUpdate"
    },
    "DavObject" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "string",
          "description" : "Task instance ID (internal)"
        },
        "uid" : {
          "type" : "string",
          "description" : "Task object ID (public)"
        },
        "href" : {
          "type" : "string",
          "description" : "The URI where this object is filed"
        },
        "lastModified" : {
          "type" : "integer",
          "format" : "int64",
          "description" : "Last modification time (unix timestamp)"
        },
        "etag" : {
          "type" : "string",
          "description" : "Revision tag of the object"
        },
        "size" : {
          "type" : "integer",
          "description" : "Size (in bytes) of data payload"
        },
        "data" : {
          "type" : "string",
          "description" : "Task data payload"
        },
        "format" : {
          "type" : "string",
          "description" : "Specifies the format of data payload",
          "enum" : [ "icalendar", "json" ]
        }
      },
      "title" : "DavObject",
      "description" : "Represent a single task-object"
    },
    "DavObjectPayload" : {
      "type" : "object",
      "required" : [ "format", "href" ],
      "properties" : {
        "href" : {
          "type" : "string",
          "description" : "The URI where this object is filed (for updates is the same as path param)"
        },
        "data" : {
          "type" : "string",
          "description" : "Task data payload"
        },
        "format" : {
          "type" : "string",
          "description" : "Specifies the format of data payload",
          "enum" : [ "icalendar", "json" ]
        }
      },
      "title" : "DavObjectPayload",
      "description" : "Transports task-object data."
    },
    "DavObjectChanged" : {
      "type" : "object",
      "required" : [ "etag", "href", "id" ],
      "properties" : {
        "id" : {
          "type" : "string",
          "description" : "Task instance ID"
        },
        "href" : {
          "type" : "string",
          "description" : "Reference URI where this object is filed"
        },
        "etag" : {
          "type" : "string",
          "description" : "Revision tag of the object"
        }
      },
      "title" : "DavObjectChanged",
      "description" : "Defines useful data of a changed task-object"
    },
